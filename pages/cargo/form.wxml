<view>
  <mp-toptips msg="{{ error }}" type="error" show="{{ error }}"></mp-toptips>

  <mp-form models="{{ formData }}">
    <mp-cells title="货物">
      <mp-cell show-error title="货物名称" ext-class="">
        <input bindinput="formInputChange" data-field="name" class="weui-input" placeholder="请输入货物名称"/>
      </mp-cell>
      <mp-cell show-error title="备注" ext-class="">
        <input bindinput="formInputChange" data-field="note" class="weui-input" placeholder="可为空"/>
      </mp-cell>
    </mp-cells>
  </mp-form>

  <button class="btn-primary btn-submit" bindtap="submit">提交</button>
</view>
