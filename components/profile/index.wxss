.header {
  padding: 10px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f1f1f1;
}

.avatar {
  margin-right: 10px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.main {
  margin-top: 80px;
}

.separator {
  width: 100%;
  height: 1px;
  background: #f1f1f1;
}

.block {
  padding: 15px;
  display: flex;
  align-items: center;
}

.block .icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.block .value {
  flex: 1;
  text-align: right;
}
